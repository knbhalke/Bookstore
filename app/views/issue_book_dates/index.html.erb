<p id="notice"><%= notice %></p>

<h1>Issue Book Dates</h1>

<table>
  <thead>
    <tr>
      <th>Issuedate</th>
      <th>User</th>
      <th>Book</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issue_book_dates.each do |issue_book_date| %>
      <tr>
        <td><%= issue_book_date.issuedate %></td>
        <td><%= issue_book_date.user_id %></td>
        <td><%= issue_book_date.book_id%></td>
        <td><%= link_to 'Show', issue_book_dates_path%></td>
        <td><%= link_to 'Edit', edit_issue_book_date_path(issue_book_date) %></td>
        <td><%= link_to 'Destroy', issue_book_date, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Approve' , issue_book_date , notice:"Request Approve Successfully"%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

